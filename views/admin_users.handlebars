<main class="admin__column admin__main">
    <div class="container-fluid">
        <div class="user hidden">
            <section class="admin__location">
                <h1>{{title}}</h1>
                <span>admin &rsaquo; dashboard</span>
            </section>
            <div class="user_info">
                <img src="{{user.avatar}}" alt="{{user.username}}">
                <span><a href="/profil/xaoo">[{{user.username}}]</a></span>|
                <span><a href="/logout">wyloguj się</a></span>
            </div>
        </div>
        <div class="stats clearfix">
            <div class="column turq">
                <div class="user">
                    <p class='count'>{{usersCount}}</p>
                    <p>Users</p>
                </div>
            </div>
        </div>
        <div class="feed">
            <table>
                <thead>
                    <tr>
                        <th>Użytkownik</th>
                        <th>Email</th>
                        <th>Prawa</th>
                        <th>Data rejestracji</th>
                        <th>Ustawienia</th>
                    </tr>
                </thead>
                {{#each usersList}}
                <tr>
                    <td><a href="/profil/{{username}}">{{username}}</a></td>
                    <td>{{email}}</td>
                    <td>{{rank}}</td>
                    <td>{{createdAt}}</td>
                    <td>
                        <a href="/admin/users/give_role?ID={{_id}}&role=user"><span style='color:orange'
                                onclick='return confirm("Czy chcesz temu użytkownikowi nadać prawa użytkownika?")'>user</span></a>
                        <a href="/admin/users/give_role?ID={{_id}}&role=redaktor"><span style='color:purple'
                                onclick='return confirm("Czy chcesz temu użytkownikowi nadać prawa redaktora?")'>redaktor</span></a>
                        <a href="/admin/users/give_role?ID={{_id}}&role=moderator"><span style='color:green'
                                onclick='return confirm("Czy chcesz temu użytkownikowi nadać prawa moderatora?")'>mod</span></a>
                        {{#if isBanned}}
                        <a href="/admin/users/unban?ID={{_id}}"><span style='color:red'
                                onclick='return confirm("Czy chcesz odbanować tego użytkownika?")'><b>odbanuj</b></span></a>
                        {{else}}
                        <a href="/admin/users/ban?username={{username}}"><span style='color:red'
                                onclick='return confirm("Czy chcesz zbanować tego użytkownika?")'>banuj</span></a>
                        {{/if}}
                        <a href="/admin/users/delete?ID={{_id}}"><span style="color:#107dac"
                                onclick='return confirm("Czy chcesz usnąć tego użytkownika?")'>usuń</span></a>
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
</main>
</body>

</html>