<main>
    <section class="latest latest--hidden">
        <h1 class="section-header section-header--margin">Najnowsze artykuły</h1>
        <section class="articles">
            {{#each articles}}
            <article class="latest__article">
                <a class='latest__link' href='/news/{{category}}/{{spacesToDashes title}}' title='{{title}}'>
                    <figure class="latest__wrapper">
                        <img src="{{img}}" alt="{{title}}" class="latest__image" />
                    </figure>
                    <div class="meta">
                        <header class="meta__header">
                            <h4 class="meta__title">{{title}}</h4>
                        </header>
                        <footer class="meta__footer">
                            <span class='meta__category'>{{category}}</span>
                            <span class='meta__author'>{{author}}</span>
                        </footer>
                    </div>
                </a>
            </article>
            {{/each}}
        </section>
        <section class="pages">
            {{#if previousPage}}
            <a href="?page={{previousPage}}" class="link" title='poprzednia strona'>poprzednia strona</a>
            {{/if}}
            {{#if previousPage}}
            {{#if nextPage}}
            <span class='pages__separator'>| {{currentPage}} |</span>
            {{/if}}
            {{/if}}
            {{#if nextPage}}
            <a href="?page={{nextPage}}" class="link" title='następna strona'>następna strona</a>
            {{/if}}
        </section>
    </section>
</main>