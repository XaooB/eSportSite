<main>
    <div class="container">
        <div class="register_wrapper hidden">
            <section class="register">
                <h3>Rejestracja</h3>
                <form action="register" method='post'>
                    <label for="regLogin">Nazwa użytkownika:</label>
                    <input type="text" name='regLogin' id='regLogin' required>
                    <label for="email">Email:</label>
                    <input type="email" name='email' id="email" required>
                    <label for="regPass">Hasło:</label>
                    <input type="password" name='regPass' id="regPass" required>
                    <label for="regPass2">Powtórz hasło:</label>
                    <input type="password" name='regPass2' id="regPass2" required>
                    <div class="bot">recaptcha</div>
                    <button type="submit">Zarejestruj się</button>
                </form>
            </section>
        </div>
    </div>
</main>
