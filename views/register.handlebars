<main>
    <div class="container">
        <div class="_wrapper clearfix">
            <section class="occ f-l">
                <h1>Rejestracja</h1>
                <form id='registerForm' action="/register" method='post'>
                    <label for="regLogin">Nazwa użytkownika:</label>
                    <input type="text" name='username' id='username' required>
                    <label for="email">Email:</label>
                    <input type="email" name='email' id="email" required>
                    <label for="regPass">Hasło:</label>
                    <input type="password" name='password' id="regPass" required>
                    <label for="regPass2">Powtórz hasło:</label>
                    <input type="password" id="regPass2" required> 
                    {{#if Error}}
                    <div class="form-error">{{Error}}</div>
                    {{/if}}
                    <div class="g-recaptcha" data-sitekey="6Le9ai0UAAAAAKhR2RO2hbeOS7ksRb15RIxaFeEo"></div>
                    <input type="submit" name='submit' value='Zarejestruj się' />
                </form>
            </section>
        </div>
    </div>
</main>
